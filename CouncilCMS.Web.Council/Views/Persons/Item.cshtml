@model CmsPerson

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="">

    <section class="person">
        <div class="container">
            <div class="person-info">
                <div class="img-wrap"><img src="@CmsSettings.BaseDomain@Model.Image" alt=""></div>
                <div class="info">
                    <span class="title">
                        @Model.Title
                    </span>
                    <span class="subtitle block-decor-top block-decor-bottom">@Model.Post</span>
                    <div class="schedule">
                        @Html.Raw(Model.ContactAddress)
                    </div>
                   
                </div>
            </div>
			@*<div class="header_banner-info">
