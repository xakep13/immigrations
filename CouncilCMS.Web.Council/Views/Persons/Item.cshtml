            <div class="descr block-decor-top block-decor-bottom">
                <div class="cms-page">
                    @Html.Partial("_prtContent", Model.ContentRows)
                    <div class="cms-article-date text-right">
                        @if (!String.IsNullOrEmpty(Model.PublishDate))
                        {
                            <em class="help-text">
                                Опубліковано: @Model.PublishDate
                            </em>
                        }
                        @if (!String.IsNullOrEmpty(Model.LastEditDate))
                        {
                            <em class="help-text">
                                (оновлено: @Model.LastEditDate)
                            </em>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    @if (!String.IsNullOrEmpty(Model.Email))
    {
        <section class="record">
            <div class="container">
                <span class="block-title block-decor-bottom">Запис на прийом</span>
                <span class="form-info">Пункти з позначкою <b>*</b> обов’язкові для заповнення</span>
            </div>
            <form method="POST" class="record-form">
                <div class="container">
                    <label class="top-name">Ваше прізвище ім'я по батькові<b>*</b><input type="text" name="name"></label>
                    <label>Ваш телефон<b>*</b><input type="tel" name="phone"></label>
                    <label>Електронна адреса<b>*</b><input type="mail" name="email"></label>

                    <label class="comment">Коментар<b>*</b><textarea name="comment"></textarea></label>
                    <p class="licence">Заповнивши цю форму, Ви приймаєте угоду користувача сайту</p>
                    <button class="site-btn">Відправити запит</button>
                </div>
            </form>
        </section>
    }
</main>



