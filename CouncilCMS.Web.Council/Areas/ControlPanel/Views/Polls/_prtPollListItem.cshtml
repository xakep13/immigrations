@model  Bissoft.CouncilCMS.BLL.ViewModels.Admin.PollListItem

@if (Model != null)
{
    <div class="card container" id="divContainer@(Model.Id)" data-id="@Model.Id">
        <div class="div-table">
            <div class="div-cell">
                <span class="btn btn-link btn-expand" data-toggle="collapse" data-target="#containerChilds@(Model.Id)">
                    <i class="fa fa-fw fa-angle-down"></i>
                </span>
                <div class="form-control-static" style="display:inline-block;">
                    <strong class="lang-uk text-uppercase">
                        @Model.NameUk
                    </strong>
                    <strong class="lang-ru text-uppercase">
                        @Model.NameRu
                    </strong>
                    <strong class="lang-en text-uppercase">
                        @Model.NameEn
                    </strong>
                </div>
            </div>
            <div class="div-cell" style="width:200px;">
                <em style="font-size:12px">проголосували: @Model.VoiceCount</em>
            </div>
            <div class="div-cell text-right">
                <a href="#" class="link-btn nav-link" data-action="edit-item" data-id="-1" data-parent-id="" data-container-id="@Model.Id" title="додати відповідь в опитування">
                    <i class="fa fa-fw fa-plus"></i>
                </a>
                <a href="#" class="link-btn nav-link" data-action="edit-container" title="редагувати опитування">
                    <i class="fa fa-fw fa-pencil"></i>
                </a>
                <a href="#" class="link-btn nav-link" data-action="remove-container" title="видалити опитуванння">
                    <i class="fa fa-fw fa-trash"></i>
                </a>
            </div>

        </div>
    </div>
}


