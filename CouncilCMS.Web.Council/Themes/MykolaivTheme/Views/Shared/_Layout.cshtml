					<label class="control-label">Ваш email</label>
					<input type="text" name="email" class="form-control" placeholder="Ваш email" aria-describedby="email-addon">
				</div>
				<div class="form-group text-left" style="margin-top:25px;">
					<button type="submit" class="btn btn-primary">Підписатися</button>
					<button data-remodal-action="cancel" class="remodal-cancel btn btn-default">Закрити</button>
				</div>
