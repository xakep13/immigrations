	<script>
        $(document).ready(function ()
        {
            $("#admin_logIn_btn").on("click", function () {
                window.location.href = "/uk/ControlPanel";
            });
        })
        function subscribeForm(type) {
            var inst = $.remodal.lookup[$('[data-remodal-id=rm' + type + ']').data('remodal')];
            inst.open();
        };

        function showGFBvalidForm(type) {
            var wind = window.open('https://feedburner.google.com/fb/a/mailverify?uri=dnipro-rada-' + type, 'popupwindow', 'scrollbars=yes,width=600,height=650');

            wind.onbeforeunload = function () {
                var inst = $.remodal.lookup[$('[data-remodal-id=rm' + type + ']').data('remodal')];
                inst.close();
            }
            return true;
        }

        function download(url, name) {
            window.location = '/uk/Widgets/GetWidgetContent?url=' + url + '&name=' + name;
        }

        $(function () {
            $(".weather").load("/home/weather");

            $(window).scroll(function () {
                if ($(this).scrollTop() >= 300) {
                    $('#btnGoTop').fadeIn(200);
                } else {
                    $('#btnGoTop').fadeOut(200);
                }
            });

            $("#btnBurger").on("click", function () {
                $(".header-content,.main-menu").toggleClass("in");
            });

            $("#btnSubMenu").on("click", function () {
                $(this).toggleClass("in");
                $(".sub-menu").toggleClass("in");
            });

            $('#btnGoTop').on("click", function () {
                $('body,html').animate({
                    scrollTop: 0
                }, 500);
            });

            coreUtils.createDatepicker($(".date-input"));
            coreUtils.createDatepicker($(".bs-datepicker"));

            $(".date-input").on("dp.change", function () {
                window.location.href = "/@(CurrentCulture.Name.ToLower())/articles/category/pres-centr?date=" + $(this).val();
            });

            $('.cms-banners').slick({
                dots: true,
                slidesToShow: 4,
                autoplay: true,
                responsive: [
                    {
                        breakpoint: 1200,
                        settings: {
                            arrows: true,
                            slidesToShow: 3
                        }
                    },
                     {
                         breakpoint: 992,
                         settings: {
                             arrows: true,
                             slidesToShow: 2,
                             dots: false,
                         }
                     },
                    {
                        breakpoint: 768,
                        settings: {
                            arrows: false,
                            slidesToShow: 1,
                            dots: false,
                        }
                    }
                ]
            });

        });
	</script>
