@model CmsArticle
@if (Model != null)
{
    <div class="mer-block">
        <div class="mer">
            <img src="@CmsSettings.MayorImage" alt="">
            <div class="info">
                <span class="title">@CmsSettings.MayorTitleUk</span>
                <span class="name">@CmsSettings.MayorNameUk</span>
                <p class="descr">@Model.Title</p>
                <a class="detalis" href="/uk/articles/item/@Model.Id/@Model.Url">Детальніше</a>
            </div>
        </div>     
    </div>
}